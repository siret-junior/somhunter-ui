<div class="likes-panel container fluid panel">
    <div class="row">
        <div class="inline-title-cont col-4 p-0">
            <h2 class="inline-title"> Likes</h2>
        </div>
        <div class="col-8">

            <ul class="likes-list"
                {{did-update this.didUpdateAttrs @frames}}
            >
                
                {{#if this.items}}

                    {{#each this.items as |item|}}
                        {{#if item.src }}
                            <Frame @frame={{item}} />    
                        {{/if}}
                    {{/each}}                    

                {{/if}}

            </ul>
        </div>
    </div>
</div>