<div class="custom-modal debug-window-modal modal {{if this.windowVisible " display-block"}}">
    <div class="settings-window modal-dialog" role="document">

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-cogs" aria-hidden="true"></i>Settings</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"
                    {{on "click" this.hideWindow }}>
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <hr />

                <button class="btn-secondary btn" type="button" {{on "click" this.login}}>Login to eval server</button>
                <button class="btn-secondary btn" type="button" {{on "click" this.logout}}>Logout from eval server</button>
                

            </div>

        </div>

    </div>
</div>
