{{!-- <h1>Current model ID: {{@model.id}}</h1> --}}

<div class="relocation-panel container-fluid col-12">
    <div class="row">
        <div class="relocation-btn-cont  col-2 p-0 pr-3">
            <button type="button" data-id=0 class="btn-reloc btn btn-primary" {{on "click"
                this.onRelocationBtnClick0}}><i class="fas fa-external-link-alt" aria-hidden="true"></i></button>

        </div>
        <div class="col-3 relocation-frame">
            {{#if this.relocation0}}
                <Frame @frame={{this.relocation0}} id="relocationFrame0" />
                <span class="delete" onclick={{this.clearRelocation0}} style="right: 8px;">&times;</span>
                <input type="hidden" id="relocationFrame0" value={{this.relocation0.id}}/>
            {{/if}}
        </div>
        <div class="col-2"></div>
        <div class="col-3 relocation-frame">
            {{#if this.relocation1}}
                <Frame @frame={{this.relocation1}}  />
                <span class="delete" onclick={{this.clearRelocation1}} style="right: 8px;">&times;</span>
                <input type="hidden" id="relocationFrame1" value={{this.relocation1.id}} />
            {{/if}}
        </div>
        <div class="relocation-btn-cont right col-2 p-0 pr-3">
            <button type="button" data-id=1 class="btn-reloc btn btn-primary" {{on "click"
                this.onRelocationBtnClick1}}><i class="fas fa-external-link-alt" aria-hidden="true"></i></button>

        </div>
        
    </div>
</div>
