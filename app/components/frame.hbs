<div class="frame col-2 {{if @frame.highlighted "highlighted"}} {{if @frame.liked "liked"}}"  
    style={{thumb "http://127.0.0.1:8888/frames/" @frame.src}} 
    data-id={{@frame.id}}
    {{on "wheel" this.onWheel}}
    {{on "click" this.onLikeFrame}}
>
    <div class="frame-overlay"data-id={{@frame.id}} >
        <button type="button" class="btn-bookmark btn btn-warning"
            data-id={{@frame.id}} {{on "click" this.onBookmarkBtnClick}}><i class="fa fa-star" aria-hidden="true"></i></button>            

        <button type="button" class="btn-submit btn btn-success"
            data-id={{@frame.id}} {{on "click" this.onSubmitBtnClick}}><i class="fa fa-check" aria-hidden="true"></i></button>            

        <button type="button" data-id={{@frame.id}} class="btn-detail btn btn-primary"
            {{on "click" this.onDetailBtnClick}}>Detail</button>            

        <button type="button" data-id={{@frame.id}} class="btn-knn btn btn-primary"
            {{on "click" this.onKnnBtnClick}}>k-NN</button>            
    </div>    
</div>
