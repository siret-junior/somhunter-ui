<div class="custom-modal debug-window-modal modal {{if this.windowVisible " display-block"}}">
    <div class="debug-window modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-bug" aria-hidden="true"></i>Debug</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"
                    {{on "click" this.hideWindow }}>
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">

                <DebugButtonsPanel />
                <hr />
                <pre class="compact-code">
                    {{this.coreSettings}}    
                </pre>                

            </div>

        </div>
    </div>
</div>
