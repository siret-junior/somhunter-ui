<div class="canvas-wrapper {{this.canvasElemId}}">
    <div 
        id={{this.canvasElemId}} 
        class="collage-canvas" 
        {{did-update this.didUpdateAttrs @texts}}
        {{on "click" @onClickAddTextBtnTot}}
        data-id={{@index}}
        {{on "click" (fn this.onClickQueryCanvas @index)}}>
        
        
        {{#if @texts}}
            {{#each @texts as |item|}}

                <div id="{{item.id}}" class="
                    canvas-query
                    text
                    ui-widget-content"
                    {{did-insert this.didInsert}}
                    style="height: 60px;width:100px; left: calc(50% - 50px); top: calc(50% - 30px);"
                    
                    
                >
                    <span class="delete" 
                        {{on "click" (fn @onRemoveItem item.id @index)}}
                        
                    >
                    &times;                       
                    </span>
                    <TextAutocomplete @model={{@model}} @id={{item.id}} @value={{item.text}}/>
                </div>
            
        
            {{/each}}
        {{/if}}

    </div>
</div>
