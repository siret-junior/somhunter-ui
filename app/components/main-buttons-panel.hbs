<div class="main buttons-panel container-fluid col-12">

    <div class="row">
        <div class="rescore-btns-const col-12 p-0">
            <div class="rescore-btns-container">
                <button class="btn-rescore btn-primary btn" type="button" {{on "click" this.onClickRescoreTopScoredBtn}}>Rescore<br/>Top Scored</button>
                <div class="clip-button-container">
                    <button class="clip-button-absolute" id="topScoredClip" {{on "click" this.onClickRescoreTopScoredBtn}}>C</button>
                </div>
                <button class="btn-rescore btn-primary btn" type="button" {{on "click" this.onClickRescoreTopScoredContextBtn}}>Rescore<br/>Top Scored
                    Context</button>
                <div class="clip-button-container">
                    <button class="clip-button-absolute" id="topScoredContextClip" {{on "click" this.onClickRescoreTopScoredContextBtn}}>C</button>
                </div>
                <button class="btn-rescore btn-primary btn" type="button" {{on "click" this.onClickRescoreSomScoredBtn}}>Rescore<br/>SOM </button>
                <div class="clip-button-container">
                    <button class="clip-button-absolute" id="somClip" {{on "click" this.onClickRescoreSomScoredBtn}}>C</button>
                </div>
            </div>
        {{#if this.collectorMode}}
            <hr />
            <button class="large special btn-rescore btn-secondary btn" type="button" {{on "click" this.onClickSave}}>Save query</button>
            <hr />
        {{/if}}

        </div>
    </div>

    <div class="row">
        <div class="change-view-btns col-12 p-0">
            <button class="{{this.ELEM_CLASSES.GOTO_TOP_SCORED_BTN}} btn-secondary btn" type="button" {{on "click" this.onClickTopScoredBtn}}>Top Scored
                View</button>
            <button class="{{this.ELEM_CLASSES.GOTO_TOP_SCORED_CONTEXT_BTN}} btn-secondary btn" type="button" {{on "click" this.onClickTopScoredContextBtn}}>Top Scored
                Context View</button>
            <button class="btn-som btn-secondary btn" type="button" {{on "click" this.onClickSomBtn}}>SOM View</button>
        </div>
    </div>
</div>