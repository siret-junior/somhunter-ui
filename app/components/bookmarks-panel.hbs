<div class="bookmarks-panel container fluid panel">
    <div class="row">
        <div class="col-4 p-0">
            <h1 class="panel-title small"> Bookmarks</h1>
        </div>
        <div class="col-8">

            <ul class="bookmarks-list"
                {{did-update this.didUpdateAttrs @frames}}
            >
                
                {{#if this.items}}

                    {{#each this.items as |item|}}
                        <Frame @frame={{item}} />    
                    {{/each}}                    

                {{/if}}

            </ul>
        </div>
    </div>
</div>